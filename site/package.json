    "@vueuse/nuxt": "12.8.1",
    "bulma": "1.0.3",
    "element-plus": "2.9.5",
    "eslint": "9.21.0",
    "sass": "1.86.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@asika32764/vue-animate": "^3.0.2",
    "@nuxtjs/i18n": "^9.5.5",
